@model IEnumerable<LMS_Project.Models.LMS.Document>

@{
    ViewBag.Title = "Ungraded Assignments";
}

<h2>Ungraded Assignments</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Uploader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Subject.Name)
            </td>
            <td>
                @Html.DisplayName(item.Uploader.ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentName)
            </td>
            <td>
                @Html.ActionLink("Download Document", "Download", "Documents", new { id = item.ID }, null) |
                @Html.ActionLink("Set a Grade", "Grade", "Grades", new { id = item.ID }, null)
            </td>
        </tr>
    }

</table>
