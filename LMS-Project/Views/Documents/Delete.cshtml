@model LMS_Project.Models.LMS.Document

@{
    ViewBag.Title = "Delete a Document";
}

<h2>Are you sure you want to delete this document?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DocumentName)
        </dt>

        <dd>
            @Html.ActionLink(Model.DocumentName, "Download", "Documents", new { id = Model.ID }, null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UploadingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UploadingDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Subject.Name)
        </dd>

        <dt>
            @Html.DisplayName("Visible for")
        </dt>

        <dd>
            @if (Model.VisibleFor.Name == LMS_Project.Models.LMS.RoleConstants.Student)
            {
                @Html.DisplayName("The whole classroom")
            }
            else
            {
                @Html.DisplayName("Myself")
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
