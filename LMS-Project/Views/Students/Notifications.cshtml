@model IEnumerable<LMS_Project.Models.LMS.Notification>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <b>Teacher</b>
        </th>
        <th>
            <b>Grade</b>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReadingDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (item.ReadingDate != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Grade.Document.Course.Teacher.FirstName) @Html.DisplayFor(modelItem => item.Grade.Document.Course.Teacher.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.AGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendingDate)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.ReadingDate)
            </td>
        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.Grade.Document.Course.Teacher.FirstName) @Html.DisplayFor(modelItem => item.Grade.Document.Course.Teacher.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.AGrade)
            </td>
            <td>
               <b>@Html.DisplayFor(modelItem => item.Grade.Comment)</b>
            </td>
            <td>
                <b>@Html.DisplayFor(modelItem => item.SendingDate)</b>
            </td>
            <td>
                <b>@Html.DisplayFor(modelItem => item.ReadingDate)</b>
            </td>
        }
    </tr>
}

</table>
