@model IEnumerable<LMS_Project.Models.LMS.Course>

<div ng-app="LMSApp" ng-controller="Course_Index_Ctrl" ng-init="getData()">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="left">
        <form class="glyphicon glyphicon-search" method="get">
            <input type="text" name="Search" ng-model="searchTerm" placeholder="Free Search" style="width:120px; height:25px;font-family: Helvetica, Arial, sans-serif">
        </form>
    </div>
    <table class="table">
        <tr>
            <th ng-click="orderByMe('Subject.Name')">@Html.DisplayNameFor(model => model.Subject.Name)</th>
            <th ng-click="orderByMe('Teacher.LastName+Teacher.FirstName')">@Html.DisplayNameFor(model => model.Teacher)</th>
            <th></th>
        </tr>
        @{
            var url1 = Url.Action("Edit", new { ID = "{{course.ID}}" });
            url1 = HttpUtility.UrlDecode(url1);
        }
        @{
            var url2 = Url.Action("Details", new { ID = "{{course.ID}}" });
            url2 = HttpUtility.UrlDecode(url2);
        }
        @{
            var url3 = Url.Action("Delete", new { ID = "{{course.ID}}" });
            url3 = HttpUtility.UrlDecode(url3);
        }
        <tr ng-repeat="course in courses | orderBy:myOrderBy:reverse | filter:searchTerm ">
            <td>{{course.Subject.Name}}</td>
            <td>{{course.Teacher.FirstName}} {{course.Teacher.LastName}}</td>
            <td>
                <a data-ng-href="@url1">Edit</a> |
                <a data-ng-href="@url2">Details</a> |
                <a data-ng-href="@url3">Delete</a>
            </td>
        </tr>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularcourses")
}
