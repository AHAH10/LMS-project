@model LMS_Project.ViewModels.PartialCoursesVM

@{
    ViewBag.Title = "Delete a Course";
}

<h2>Are you sure you want to delete this Course?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Subject.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>

        <dt>
            @Html.DisplayName("Teacher's Name")
        </dt>

        <dd>
            @Html.DisplayName(Model.Teacher.FirstName + " " + Model.Teacher.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.Email)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Courses", "Index")
        </div>
        <p class="text-danger">@ViewBag.EMessage</p>
    }
</div>
