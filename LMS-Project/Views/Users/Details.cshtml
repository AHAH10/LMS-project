@model LMS_Project.Models.LMS.User

@{
    ViewBag.Title = "Details";
}

@{string title = Model.ToString();
if (title.Length == 0)
{
    title = "Details";
}
}
<h2>@title</h2>

    <div>
        <hr />
        <div class="index-table">
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.LabelFor(model => model.PhoneNumber, "Phone Number")
                    </th>
                    @{if (Model.Courses != null && Model.Courses.Count > 0)
                    {
                        <th>
                            @Html.DisplayNameFor(model => model.Courses)
                        </th>
                    }}
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </td>
                    @{if (Model.Courses != null && Model.Courses.Count > 0)
                    {
                        <td>
                            @Html.DisplayFor(model => model.Courses.First().Subject.Name)
                        </td>
                    }}
                </tr>
            </table>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
