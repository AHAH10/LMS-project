@model LMS_Project.Models.LMS.User

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete @Model.UserName?</h2>
<hr />

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" name="submitButton" value="yes" class="btn btn-default">Delete</button>
            <button type="submit" name="submitButton" value="no" class="btn btn-default">Cancel</button>
            @Html.Hidden("id", Model.Id)
        </div>
    }
</div>

<p>
    @Html.ActionLink("Back to Users", "Index")
</p>
