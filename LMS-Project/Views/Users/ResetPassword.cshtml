@model LMS_Project.Models.LMS.User

@{
    ViewBag.Title = "ReinitPassword";
}

<h2>Reinit Password</h2>

<h3>Are you sure you want to reinitialise the password for @Model.UserName?</h3>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" name="submitButton" value="yes">Yes!</button>
            <button type="submit" name="submitButton" value="no">No</button>
            @Html.Hidden("id", Model.Id)
        </div>
    }
</div>
