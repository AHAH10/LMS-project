@model IEnumerable<LMS_Project.Models.LMS.Grade>

@{
    ViewBag.Title = "Grades";
}

<h2>Grades</h2>
<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Document.DocumentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AGrade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Document.DocumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
